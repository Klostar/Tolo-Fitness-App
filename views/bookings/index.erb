<h1>Bookings</h1>


<p>
  <a class="btn" href="bookings/new">New Booking</a>
</p>

<ul>
  <% for booking in @bookings %>
  <li>
    <p> <%= Client.find(booking.client_id).full_name %> : <%= GymClass.find(booking.gymclass_id).type%> with <%= GymClass.find(booking.gymclass_id).instructor%> </p>

      <form action="/bookings/<%=booking.id%>/delete" method="POST">
        <input type="submit" value ="delete" />
      </form>

  </li>
  <% end %>
</ul>
